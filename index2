  <!-- Scripts -->
  <script>
    // Year
    document.getElementById('y').textContent = new Date().getFullYear();

    // Count-up metrics when visible
    const counters = document.querySelectorAll('.metric .value');
    const fmt = (n, unit='') => unit==='min' ? `${n} min` : `${n}%`;
    const obs = new IntersectionObserver((entries, observer)=>{
      entries.forEach(entry=>{
        if(entry.isIntersecting){
          const el = entry.target; const end = +el.dataset.count; const isMin = el.textContent.includes('min');
          let cur = 0; const step = Math.ceil(end/50);
          const tick = ()=>{ cur += step; if(cur>=end){ cur=end; clearInterval(timer); }
            el.textContent = fmt(cur, isMin? 'min': '%'); };
          const timer = setInterval(tick, 24);
          observer.unobserve(el);
        }
      });
    },{threshold:.3});
    counters.forEach(c=>obs.observe(c));

    // Program Finder copy
    const grade = document.getElementById('grade');
    const recTitle = document.querySelector('#rec .rec-title');
    const recBody = document.querySelector('#rec .rec-body');
    const map = {
      '9': ['Start Strong (9th)', 'Build habits and explore interests. Begin light activities and keep a brag sheet.'],
      '10': ['Momentum (10th)', 'Dial in courses, deepen activities, plan testing, start school list discovery.'],
      '11': ['Game Plan (11th)', 'Prioritize balanced list + testing plan; start personal statement over summer.'],
      '12': ['Senior Sprint (12th)', 'Finalize list, manage supplements, keep timelines tight, compare offers clearly.']
    };
    const updateRec = () => { const [t,b] = map[grade.value]; recTitle.textContent = t; recBody.textContent = b; };
    grade.addEventListener('change', updateRec); updateRec();

    // Smooth anchor offset for sticky header
    const links = document.querySelectorAll('a[href^="#"]');
    const headerHeight = document.querySelector('header').offsetHeight;
    links.forEach(link=>{
      link.addEventListener('click', e=>{
        const id = link.getAttribute('href');
        if(id.length>1){
          const el = document.querySelector(id);
          if(el){ e.preventDefault(); window.scrollTo({top: el.offsetTop - headerHeight - 8, behavior: 'smooth'}); }
        }
      });
    });
  </script>

